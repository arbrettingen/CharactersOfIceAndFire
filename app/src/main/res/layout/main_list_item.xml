<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_sigil"
        android:layout_width="@dimen/icon_length"
        android:layout_height="@dimen/icon_length"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/margin_tiny"
        android:scaleType="fitXY"
        android:src="@drawable/arryn" />

    <TextView
        android:id="@+id/list_item_largeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/margin_tiny"
        android:layout_marginRight="@dimen/margin_tiny"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_toEndOf="@+id/list_item_sigil"
        android:layout_toRightOf="@+id/list_item_sigil"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium"
        android:paddingStart="@dimen/margin_medium"
        android:text="Medium Text"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/textsize_main_list_item" />

    <TextView
        android:id="@+id/list_item_smallTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_largeTextView"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_toEndOf="@+id/list_item_sigil"
        android:layout_toRightOf="@+id/list_item_sigil"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium"
        android:text="Small Text"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/textsize_small" />
</RelativeLayout>
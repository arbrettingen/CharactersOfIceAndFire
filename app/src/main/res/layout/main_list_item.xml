<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_sigil"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/arryn" />

    <TextView
        android:id="@+id/list_item_largeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/list_item_sigil"
        android:layout_toRightOf="@+id/list_item_sigil"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingStart="12dp"
        android:text="Medium Text"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/list_item_smallTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_largeTextView"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/list_item_sigil"
        android:layout_toRightOf="@+id/list_item_sigil"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Small Text"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp" />
</RelativeLayout>